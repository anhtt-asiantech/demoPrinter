<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="250dp"
       android:orientation="vertical"
       android:layout_centerInParent="true"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/btn_open_hp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Open Printer"
           android:onClick="openPrint"/>

       <Button
           android:id="@+id/btn_open_print_hand"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Open Print Hand"
           android:onClick="openPrint"/>
       <Button
           android:id="@+id/btn_connect_printer"
           android:layout_width="match_parent"
           android:text="Connect Printer"
           android:layout_height="wrap_content"/>

       <Button
           android:id="@+id/btn_print_photo"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Print photos"
           android:onClick="openPrint"/>

       <Button
           android:id="@+id/btn_wifi_print"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="WIFI Print"
           android:onClick="openPrint"/>

       <Button
           android:id="@+id/btn_img_print"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="PDF Print"
           android:onClick="openPrint"/>
   </LinearLayout>
</RelativeLayout>